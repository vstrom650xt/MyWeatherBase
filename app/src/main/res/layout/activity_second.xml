<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SecondActivity">

    <ImageView
        android:id="@+id/imageViewCiudad"
        android:layout_width="385dp"
        android:layout_height="344dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Spinner
        android:id="@+id/spinnerCiudades"
        android:layout_width="314dp"
        android:layout_height="54dp"
        android:layout_marginTop="68dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCiudad"
        app:layout_constraintEnd_toEndOf="@+id/imageViewCiudad"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageViewCiudad"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCiudad"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinnerCiudades"
        app:layout_constraintStart_toStartOf="@+id/spinnerCiudades" />
</androidx.constraintlayout.widget.ConstraintLayout>